@using DAS.Domain.Resquests
@using DAS.Domain.Resquests.Author
@{
    TempData["Title"] = ViewBag.Title;
    var category = ViewBag.Categorys != null ? ViewBag.Categorys as Category : new Category();
    var author = ViewBag.Authors != null ? ViewBag.Authors as Author : new Author();
}

<h6><a href="/">Home</a> &gt; Employees of @category.CategoryName</h6>
<div class="row">
    <input hidden id="CategoryId" value="@category.CategoryId" />
    <input hidden id="AuthorId" value="@author.AuthorId" />
    <div class="col-12 mb-3 mt-2">
        <a href="javascript:void(0);" class="au-btn au-btn-icon au-btn--green au-btn--small" onclick="book.openAddEditBook()">
            <i class="zmdi zmdi-plus"></i>Create
        </a>
    </div>
</div>
<table id="tbBooks" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Book Name</th>
            <th>Avatar</th>
            <th>Release Date</th>
            <th>Author</th>
            <th>Category</th>
            <th>Publishing</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


<div id="addEditBooks" class="modal fade" data-backdrop="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="frmAddEditEmployee">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Books</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="Id" name="Id">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="row form-group">
                                <div class="col-12">
                                    <img src="~/images/logo.png" id="Avatar" width="220" height="500" />
                                    <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="book.uploadAvatar (this)" />
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Books Name</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="BookName" name="BookName" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Avatar</label>
                                </div>
                                <div class="col-9">
                                    <input type="date" id="DayTime" name="Release Date" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Author</label>
                                </div>
                                <div class="col-9">
                                    <select class="custom-select" id="Author" name="Author" style="width:100%">
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Category</label>
                                </div>
                                <div class="col-9">
                                    <select class="custom-select" id="Category" name="Category" style="width:100%">
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Publishing</label>
                                </div>
                                <div class="col-9">
                                    <select class="custom-select" id="Publishing" name="Publishing" style="width:100%">
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Description</label>
                                </div>
                                <div class="col-9">
                                    <textarea type="text" id="Description" class="md-textarea form-control" rows="4"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="book.save()">Save</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/book.js" asp-append-version="true"></script>
}
